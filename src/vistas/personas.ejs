<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>EDUCATECOR</title>
    <!-- NAVIGATION -->
    <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
  </head>
  <body>

    <!-- navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">EDUCATECOR</a>
    </nav>
<div class="container mt-5">

  <a href="/registrar" class="btn btn-primary">Nuevo Usuario</a>
  <br/>
  
      <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>No.</td>
            <td>NOMBRES Y APELLIDOS</td>
            <td>TIPO ID</td>
            <td>NRO ID</td>
            <td>TELEFONO</td>
            <td>CORREO</td>
            <td>CONTRASEÃ‘A</td>
            <td>ACCIONES</td>
          </tr>
        </thead>
        <tbody>
          <% if (dato) { %>
            <% for(var i = 0; i < dato.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= dato[i].nombres %> <%= dato[i].apellidos %></td>
                <td><%= dato[i].tipodni %></td>
                <td><%= dato[i].dni %></td>
                <td><%= dato[i].telefono %></td>
                <td><%= dato[i].correo %></td>
                <td><%= dato[i].contrasena %></td>
                <td  colspan="2">
                  <a href="/actualizar/<%= dato[i].idpersona %>" class="btn btn-info">Modificar Usuario</a>
                  <a href="/eliminar/<%= dato[i].idpersona %>" class="btn btn-danger">Borrar Usuario</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
    </div>
  
  </div>


</body>
</html>

